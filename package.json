{
  "name": "typescript-code-assistant",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace backend\" \"npm run dev --workspace frontend\"",
    "dev:all": "node scripts/dev.mjs",
    "dev:backend": "npm run dev --workspace backend",
    "dev:frontend": "npm run dev --workspace frontend",
    "build": "npm run build --workspace backend && npm run build --workspace frontend",
    "install:workspaces": "npm install --workspaces --include-workspace-root=false",
    "install:workspaces:direct": "bash scripts/install_workspaces.sh",
    "install:workspaces:prefix": "bash scripts/install_workspaces_prefix.sh",
    "preview:static": "node scripts/preview_server.mjs",
    "smoke": "./scripts/smoke_test.sh"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
