{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "noImplicitAny": false,
    "paths": {
      "@tca/shared": ["../packages/shared/dist"],
      "@tca/analysis-engine": ["../packages/analysis-engine/dist"]
    }
  },
  "include": [
    "app.ts",
    "app-verified.ts",
    "server.ts",
    "server-verified.ts",
    "config/**/*.ts",
    "services/**/*.ts",
    "utils/**/*.ts",
    "httpApp.ts",
    "websocket/**/*.ts",
    "middleware/**/*.ts",
    "ambient.d.ts"
  ],
  "exclude": ["**/*.test.ts", "controllers/**", "routes/**", "models/**"]
}
